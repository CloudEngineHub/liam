{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:cli": {
      "dependsOn": ["^build"],
      "outputs": ["dist-cli"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist", "dist-cli"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "gen": {
      "dependsOn": ["^gen"]
    },
    "lint": {
      "dependsOn": ["gen", "^build", "^lint"]
    },
    "fmt": {},
    "test": {
      "outputs": []
    },
    "@liam/cli#test": {
      "dependsOn": ["^build"]
    }
  }
}
