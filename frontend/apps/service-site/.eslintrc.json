{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "next-contentlayer/hooks",
            "importNames": ["useMDXComponent"],
            "message": "Please use `import { MDXContent } from \"@/libs/contentlayer\"`"
          },
          {
            "name": "contentlayer/generated",
            "importNames": ["allPosts"],
            "message": "Please use `import { MDXContent } from \"@/features/posts\"`"
          }
        ]
      }
    ]
  }
}
