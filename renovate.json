{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "groupName": "fumadocs",
      "matchPackagePatterns": [
        "^fumadocs-core$",
        "^fumadocs-mdx$",
        "^fumadocs-ui$"
      ]
    }
  ]
}
